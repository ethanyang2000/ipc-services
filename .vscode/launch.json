{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ipc",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/service",  // 替换为实际的可执行文件路径
            "args": ["--n_sms", "1", "--sms_size", "32"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "debuggerPath": "/usr/share/gdb"
        }
    ]
}
